# Shannon Insight Environment Variables
# Copy this file to .env and customize as needed

# All settings can be overridden via environment variables
# Prefix all variables with SHANNON_

# Example:
# SHANNON_Z_SCORE_THRESHOLD=2.0
# SHANNON_ENABLE_CACHE=false
# SHANNON_VERBOSE=true
# SHANNON_PARALLEL_WORKERS=4
# SHANNON_CACHE_DIR=/tmp/shannon-cache
# SHANNON_MAX_FILE_SIZE_MB=20.0

# Anomaly Detection
# SHANNON_Z_SCORE_THRESHOLD=1.5

# Performance
# SHANNON_PARALLEL_WORKERS=null
# SHANNON_TIMEOUT_SECONDS=10

# Cache
# SHANNON_ENABLE_CACHE=true
# SHANNON_CACHE_DIR=.shannon-cache
# SHANNON_CACHE_TTL_HOURS=24

# Logging
# SHANNON_VERBOSE=false
# SHANNON_QUIET=false
# SHANNON_LOG_FILE=shannon-insight.log

# Security
# SHANNON_ALLOW_HIDDEN_FILES=false
# SHANNON_BLOCK_SYSTEM_DIRS=true
# SHANNON_FOLLOW_SYMLINKS=false
